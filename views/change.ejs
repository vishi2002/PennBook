<body>
	<!-- This is a simple example template with a form that has a single input field. 
		   You'll need something similar for the login page -->
  <h1><b>Change Account Information</b></h1>
  <h5>It's quick and easy</h5>
  <form action="/changePassword" method="post">
  <div class ="mb-3 row">
  		<label class="col-sm-2 col-form-label">Username</label>
  		<div class="col-sm-5">
  			<input class="form-control" type="text" placeholder=<%- user %> disabled readonly>
  		</div>
  </div>
  <div class ="mb-3 row">
  		<label class="col-sm-2 col-form-label">Password</label>
  		<div class="col-sm-5">
  			<input type="text" class="form-control" name="newpassword" placeholder=<%- password %>>
  			<button type="submit" class="btn btn-primary">Change Password</button>
  		</div>
  	</div>
   </form>
   <form action="/changeEmailAddress" method="post">
 <div class ="mb-3 row">
  		<label class="col-sm-2 col-form-label">Full Name</label>
  		<div class="col-sm-5">
  			<input type="text" class="form-control" name="fullName" placeholder="<%= name %>" disabled readonly>
  		</div>
  	</div>
  <div class ="mb-3 row">
  		<label class="col-sm-2 col-form-label">Email Address</label>
  		<div class="col-sm-5">
  			<input type="text" class="form-control" name="emailAddress" placeholder=<%- email %>>
  			<button type="submit" class="btn btn-primary">Change Email Address</button>
  		</div>
  	</div>
  	</form>
  	<form action="/changeAffiliation" method="post">
  <div class ="mb-3 row">
  		<label class="col-sm-2 col-form-label">Affiliation</label>
  		<div class="col-sm-5">
  			<input type="text" class="form-control" name="affiliations" placeholder="<%= affiliation %>">
  			<button type="submit" class="btn btn-primary">Change Affiliation</button>
  		</div>
  	</div>
  	</form>
  	<form action="/changeNewsInterest" method="post">
